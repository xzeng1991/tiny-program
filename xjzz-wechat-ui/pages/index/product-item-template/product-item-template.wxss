.product-item-container {
  height: 280rpx;
  border-bottom: 1px solid #d9d9d9;
  margin: 0 30rpx;
}

.product-item {
  padding: 40rpx 0;
  height: 280rpx;
  display: flex;
}

.product-item-img {
  margin-right: 30rpx;
}

.product-item-img, image {
  height: 200rpx;
  width: 200rpx;
}

.product-item-content {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 100%;
  position: relative;
}

.product-item-title {
  font-size: 32rpx;
  color: #1e1e1e;
  margin-bottom: 24rpx;
}

.product-item-desc {
  font-size: 24rpx;
  color: #7f7f7f;
}

.product-item-footer {
  height: 78rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: -20rpx;
  left: 0;
}

.product-item-price {
  color: #b4282d;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.product-item-num {
  color: #7f7f7f;
  font-size: 24rpx;
}

.product-item-btn {
  width: 136rpx;
  height: 56rpx;
  color: #fff;
  font-size: 24rpx;
  background: #b4282d;
  margin-right: 0;
  border-radius: 3px;
  line-height: 56rpx;
  text-align: center;
}