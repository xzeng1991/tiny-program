  padding: 0 30rpx;
}

.logistics-box1 image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.logistics-company {
  line-height: 40rpx;
}

/*  */

.logistics-box2 {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
  overflow: hidden;
}

.logistics-title {
  margin: 20rpx 0;
}

.logistics-inform {
  padding:0 0 55rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.logistics-inform::after {
  content: "";
  position: absolute;
  left: 0;
  top: 15rpx;
  width: 10rpx;
  height: 10rpx;
  background: #e6e6e6;
  border-radius: 100%;
}
.logistics-inform::before {
  content: "";
  position: absolute;
  left: 4rpx;
  top: 30rpx;
  width: 2rpx;
  height: 100%;
  background: #e6e6e6;
  border-radius: 100%;
}
.logistics-inform-time {
  color: #7f7f7f;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.logistics-active view{
  color: #b4282d;
}
.logistics-active::after{
  background: #b4282d;
}