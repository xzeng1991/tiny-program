/*列表分类*/

page {
  background: #f5f5f5;
}

.order-top {
  height: 80rpx;
  display: flex;
  font-size: 28rpx;
  align-items: center;
}

.order-top2 {
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}

.order-tactive {
  color: #b4282d;
}

.order-tactive::after {
  content: "";
  width: 110rpx;
  height: 3rpx;
  background: #b4282d;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

/*订单列表*/

.order-list {
  overflow: hidden;
  margin-bottom: 100rpx;
}

.order-list2 {
  margin-top: 20rpx;
  background: #fff;
}

.order-box1 {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #1e1e1e;
  height: 90rpx;
  align-items: center;
}

.order-box2 {
  background: #fafafa;
  padding: 0 30rpx 30rpx;
  overflow: hidden;
}

.order-good {
  margin-top: 30rpx;
}

.order-img1 {
  display: block;
  width: 160rpx;
  height: 160rpx;
  float: left;
  margin-right: 20rpx;
}

.order-attr {
  color: #1e1e1e;
  overflow: hidden;
}

.order-tit {
  font-size: 28rpx;
  margin: 8rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-attr2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #7f7f7f;
}

.orderr-price2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
}

.order-num {
  font-size: 24rpx;
  color: #7f7f7f;
}

.order-box3 {
  padding: 0 30rpx 30rpx;
  overflow: hidden;
}

.order-num2 {
  text-align: right;
  font-size: 28rpx;
  overflow: hidden;
  margin: 30rpx 0;
}

.order-num3 {
  font-weight: bold;
  color: #b4282d;
}

.order-button {
  font-size: 28rpx;
  height: 58rpx;
  width: 165rpx;
  text-align: center;
  float: right;
  margin-left: 30rpx;
  padding: 0;
  border-radius: 0;
}

.order-button-grey {
  border: 1rpx solid #cdcdcd;
  line-height: 56rpx;
  color: #585858;
}

.order-button-red {
  background: #b4282d;
  color: #fff;
  line-height: 58rpx;
}
