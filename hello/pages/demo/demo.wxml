<!--pages/demo/demo.wxml-->
<form bindsubmit='formSubmit' bindreset='formReset'>
  <view class='section section_gap'>
    <view class='section__title'>switch</view>
    <switch name="switch"></switch>
  </view>
  <view>
    <view>slider</view>
    <slider name="slider" show-value></slider>
  </view>
  <view>
    <view>input</view>
    <input name="input" placeholder='please input here'></input>
  </view>
  <view>
    <view>radio</view>
    <radio-group name='radio-group'>
      <label><radio value='radio1'></radio>radio1</label>
      <label><radio value='radio2'></radio>radio2</label>
    </radio-group>
  </view>
  <view>
    <view>checkbox</view>
    <checkbox-group name='checkbox-group'>
      <label><checkbox value='checkbox1'></checkbox>checkbox1</label>
      <label><checkbox value='checkbox2'></checkbox>checkbox2</label>
    </checkbox-group>
  </view>
  <view class='btn-area'>
    <button form-type='submit' class='btn-submit'>提交</button>
    <button form-type='reset' class='btn-reset'>重置</button>
  </view>
</form>
